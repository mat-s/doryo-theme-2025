{
  "name": "doryo-wordpress-project",
  "version": "1.0.0",
  "description": "Modern WordPress project with Doryo theme, built with SCSS and Vanilla JavaScript",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass wp-content/themes/doryo-theme/assets/scss/style.scss:wp-content/themes/doryo-theme/dist/style.css --style=compressed",
    "build:js": "cp wp-content/themes/doryo-theme/assets/js/main.js wp-content/themes/doryo-theme/dist/main.js && cp wp-content/themes/doryo-theme/assets/js/admin.js wp-content/themes/doryo-theme/dist/admin.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass wp-content/themes/doryo-theme/assets/scss/style.scss:wp-content/themes/doryo-theme/dist/style.css --watch --style=expanded",
    "watch:js": "nodemon --watch wp-content/themes/doryo-theme/assets/js --exec 'npm run build:js'",
    "lint:css": "stylelint 'wp-content/themes/doryo-theme/assets/scss/**/*.scss'",
    "lint:php": "phpcs --standard=WordPress wp-content/themes/doryo-theme/",
    "format:css": "prettier --write 'wp-content/themes/doryo-theme/assets/scss/**/*.scss'",
    "format:php": "phpcbf --standard=WordPress wp-content/themes/doryo-theme/",
    "setup": "npm install && npm run build",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "sass": "^1.66.0",
    "stylelint": "^15.10.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
