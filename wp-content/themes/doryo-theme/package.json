{
  "name": "doryo-theme",
  "version": "1.0.0",
  "description": "Modern custom theme for Doryo website, built on Elementor Hello-Theme with SCSS",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/style.scss:dist/style.css --style=compressed",
    "build:js": "cp assets/js/main.js dist/main.js && cp assets/js/admin.js dist/admin.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass assets/scss/style.scss:dist/style.css --watch --style=expanded",
    "watch:js": "nodemon --watch assets/js --exec 'npm run build:js'",
    "lint:css": "stylelint 'assets/scss/**/*.scss'",
    "lint:php": "phpcs --standard=WordPress .",
    "format:css": "prettier --write 'assets/scss/**/*.scss'",
    "format:php": "phpcbf --standard=WordPress ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "sass": "^1.66.0",
    "stylelint": "^15.10.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
